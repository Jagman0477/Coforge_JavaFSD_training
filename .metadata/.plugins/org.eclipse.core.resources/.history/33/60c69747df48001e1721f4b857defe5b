package com.mine.testing;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

public class Test2 {

	public static int fked[][];
	
	public static void createBoard() {
		int right = 8;
		int down = 8;
		
		fked = new int[right][down];
		
		int temp = 0;
		
		for(int i = 0; i < right; i++) {
			for(int j = 0; j < down; j++) {
				fked[i][j] = temp;
				temp++;
			}
		}
		
		for(int i = 0; i < right; i++) {
			for(int j = 0; j<down; j++, temp++) {
				System.out.print(fked[i][j]+" ");
			}
		}
	}
	
	public static int[] returnIndex(int a) {
		int[] res = new int[2];
		
		for(int i=0; i<8; i++) {
			for(int j = 0; j<8; j++) {
				if(fked[i][j] == a) {
					res[0] = i;
					res[1] = j;
					System.out.println("\n"+i+" "+j);
					return res;
				}
			}
		}
		return null;
	}
	
	public int[] possibleOutcomes(int loc[]) {
		List<List<Integer>> l1 = new ArrayList<>();
		List<Integer> l2 = new ArrayList<>(); 
			l2.add(loc[0]-2);
			l2.add(loc[1]-1);
		List<Integer> l3 = new ArrayList<>(); 
			l2.add(loc[0]-1);
			l2.add(loc[1]-2);
		List<Integer> l4 = new ArrayList<>(); 
			l2.add(loc[0]+1);
			l2.add(loc[1]-2);
		List<Integer> l5 = new ArrayList<>(); 
			l2.add(loc[0]+2);
			l2.add(loc[1]-1);
		List<Integer> l6 = new ArrayList<>(); 
			l2.add(loc[0]+2);
			l2.add(loc[1]+1);
		List<Integer> l7 = new ArrayList<>(); 
			l2.add(loc[0]+1);
			l2.add(loc[1]+2);
		List<Integer> l8 = new ArrayList<>(); 
			l2.add(loc[0]-1);
			l2.add(loc[1]+2);
		List<Integer> l9 = new ArrayList<>(); 
			l2.add(loc[0]-2);
			l2.add(loc[1]+1);
		
	}
	
	public static void main(String[] args) {
		createBoard();
		int[] indexArray = returnIndex(62);
	}
	
}
