<body style="background-color: rgb(122, 122, 124);font-size: 20px;font-family: 'Courier New', Courier, monospace; font-weight: 600;">
<h1 style="text-align: center;color: aliceblue;">Employee Form</h1>
<div style="width: 40%; border: 4px solid aliceblue;background-color: rgb(122, 122, 124);color: aliceblue; border-radius: 7px; margin-top: 5%; margin-left: 27%;padding: 4%;">
	
	<form action="FirstServlet" onsubmit="return validate()">
		<div style="display: flex;margin-bottom: 10px;">
			<label style="width: 40%;">Enter Id: </label>
			<input name="userId" id="userId" style="padding-left: 5px;border-radius: 7px;width: 40%;height: 3vh;border: solid 2px aliceblue;">
		</div>
		<div style="display: flex;margin-bottom: 10px;">
			<label style="width: 40%;">Enter name: </label>
			<input name="name" id="name" style="padding-left: 5px;border-radius: 7px;width: 40%;height: 3vh;border: solid 2px aliceblue;">
		</div>
		<div style="display: flex;">
			<button type="submit" style="width: 40%;color: aliceblue;border: 4px solid aliceblue;border-radius: 7px; background-color: rgb(122, 122, 124); height: 5vh; font-size: 24px; font-family: 'Courier New', Courier, monospace;">Login</button>
			<button type="reset" style="width: 40%;color: aliceblue;border: 4px solid aliceblue;border-radius: 7px; background-color: rgb(122, 122, 124); height: 5vh; font-size: 24px; font-family: 'Courier New', Courier, monospace;">Cancel</button>
		</div>
	</form>
</div>
	
<script>
	let validate = () => {
		let id = document.getElementById("userId").value;
		let name = document.getElementById("name").value;
		
		if((id <= 0 || isNaN(id)) && name == ''){
			alert("Invalid name and id");
			return false;
		}
		else if(id <= 0 || isNaN(id)){
			alert("Invalid id");
			return false;
		}
		else if(name ==''){
			alert("Invalid name");
			return false;
		}
		else return true;
	}
</script>
